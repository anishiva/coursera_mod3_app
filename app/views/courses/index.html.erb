<h1>Searching for - <%= @search_term%></h1>

<% if @courses.nil? %>
	<p>No courses found with relevant information...Sorry</p>
<% else %>
	<table border="1">
		<tr>
			<td>Image</td>
			<td>Name</td>
			<td>Description</td>
		</tr>
		<% @courses.each do |course|%>
			<tr class=<%=cycle('even', 'odd')%>>
				<td><%= image_tag(course["smallIcon"])%></td>
				<td><%= course["name"]%></td>
				<td><%= course["shortDescription"]%></td>
			</tr>
		<% end %>
	</table>